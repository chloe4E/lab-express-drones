<h2>Available drones</h2>
{{#each drones}}
  <div class="card">
    <div class="card-header">
      {{name}}
    </div>
    <div class="card-body">

      <p class="card-text"># of propellers {{propellers}}</p>
      <p class="card-text">max speed {{maxSpeed}}</p>

      <div class="btn-group-vertical">
        <a href="/drones/{{_id}}/edit" class="btn btn-primary">Edit the drone</a>
        <br />
        <form action="/drones/{{id}}/delete" method="post">
          <button type="submit" class="btn btn-danger">Delete the drone</button></form>
      </div>
    </div>
  </div>
{{/each}}